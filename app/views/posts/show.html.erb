      <div class="card">
        <%= image_tag @post.postimage.url, class: "img-fluid mx-auto" %>
        <div class="card-body">
          <p class="card-text"><%= @post.description %></p>
          <div class=" d-flex justify-content-between">
            <small>Posted September 10, 1983</small>
            <small>Like | Dislike</small>
          </div>
          <br>
          <form>
            <div class="form-group">
