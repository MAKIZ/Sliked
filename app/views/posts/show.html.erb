                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>
            <div class="row">
              <div class="col">
                <button type="submit" class="btn btn-primary float-right btn-sm btn-secondary">Submit</button>
                <small>160</small>
              </div>
            </div>
            <div class="row">
              <div class="col">
                <% if current_user %>
                  <div class="btn-group btn-group-sm flex-end">
                    <%= link_to "edit", edit_post_path(@post), class: "btn btn-secondary" %>
                    <%= link_to "delete", post_path(@post), method: :delete, class: "btn btn-dark"  %>
                  </div>
                <% end %>
              </div>
            </div>
          </form>
        </div>
      </div>
